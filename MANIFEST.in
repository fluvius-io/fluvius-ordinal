# Include package metadata files
include README.md
include LICENSE
include pyproject.toml

# Include all Python files
recursive-include src *.py
recursive-include tests *.py
recursive-include examples *.py

# Include configuration files
recursive-include src *.conf
recursive-include src *.yml
recursive-include src *.yaml
recursive-include src *.json

# Include rule and knowledge base files
recursive-include src *.rules
recursive-include src *.facts
recursive-include src *.kb

# Exclude cache and build files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so
global-exclude .DS_Store
